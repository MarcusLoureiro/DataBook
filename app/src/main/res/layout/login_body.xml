<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="500dp"
    android:layout_margin="20dp"
    android:background="@drawable/round_login_body"
    android:gravity="center"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/textViewTitulo"
            android:layout_width="372dp"
            android:layout_height="63dp"
            android:width="423dp"
            android:height="55dp"
            android:fontFamily="@font/montserrat"
            android:lineSpacingMultiplier="1"
            android:text="Harry Potter and the\n Philosopher`s Stone"
            android:textColor="@color/color2"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.04" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="125dp"
            android:layout_height="33dp"
            android:layout_marginStart="15dp"
            android:width="423dp"
            android:height="55dp"
            android:fontFamily="@font/montserrat"
            android:lineSpacingMultiplier="1"
            android:text="Sinopse"
            android:textAlignment="textStart"
            android:textColor="@color/color4"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.206" />

        <TextView
            android:id="@+id/textViewSinopse"
            android:layout_width="359dp"
            android:layout_height="147dp"
            android:layout_marginStart="15dp"
            android:width="423dp"
            android:height="55dp"
            android:fontFamily="@font/montserrat"
            android:lineSpacingMultiplier="1"
            android:text="Harry Potter é um garoto cujos pais, feiticeiros, foram assassinados por um poderosíssimo bruxo quando ele ainda era um bebê. Ele foi levado, então, para a casa dos tios que nada tinham a ver com o sobrenatural. Pelo contrário. Até os 10 anos, Harry foi uma espécie de gata borralheira: maltratado pelos tios..."
            android:textAlignment="textStart"
            android:textColor="@color/color2"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.392" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="150dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="125dp"
                android:layout_height="33dp"
                android:width="423dp"
                android:height="55dp"
                android:fontFamily="@font/montserrat"
                android:lineSpacingMultiplier="1"
                android:text="AUTOR(A)"
                android:textAlignment="center"
                android:textColor="@color/color4"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.19"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="125dp"
                android:layout_height="33dp"
                android:layout_marginStart="85dp"
                android:width="423dp"
                android:height="55dp"
                android:fontFamily="@font/montserrat"
                android:lineSpacingMultiplier="1"
                android:text="LANÇAMENTO"
                android:textAlignment="center"
                android:textColor="@color/color4"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.013"
                app:layout_constraintStart_toEndOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
                app:layout_constraintVertical_bias="0.0" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/textViewAutora"
                android:layout_width="125dp"
                android:layout_height="33dp"
                android:layout_margin="1dp"
                android:width="423dp"
                android:height="55dp"
                android:fontFamily="@font/montserrat"
                android:lineSpacingMultiplier="1"
                android:text="J.K Rowling"
                android:layout_marginStart="85dp"
                android:textAlignment="center"
                android:textColor="@color/color2"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.711"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView16"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textViewAno"
                android:layout_width="125dp"
                android:layout_height="33dp"
                android:layout_marginStart="85dp"
                android:width="423dp"
                android:height="55dp"
                android:fontFamily="@font/montserrat"
                android:lineSpacingMultiplier="1"
                android:text="2018"
                android:textAlignment="center"
                android:textColor="@color/color2"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textView18"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView7"
                app:layout_constraintVertical_bias="0.0" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="400dp"
            android:layout_marginEnd="200dp"
            android:src="@drawable/ic_favorito_amarelo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/share_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="400dp"
            android:layout_marginStart="200dp"
            android:src="@drawable/ic_compartilhar_amarelo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />




    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
