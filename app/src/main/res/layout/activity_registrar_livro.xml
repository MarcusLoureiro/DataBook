<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_splash"
    android:gravity="center"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/materialCardView"
                android:layout_width="373dp"
                android:layout_height="462dp"
                android:layout_marginTop="225dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.476"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.791">


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="65dp"
                    android:layout_marginEnd="32dp"
                    android:hint="Título"
                    app:startIconDrawable="@drawable/ic_title"
                    app:startIconTint="@color/color4"
                    app:counterTextColor="@color/color4"
                    app:boxStrokeColor="@color/color4"
                    app:helperTextTextColor="@color/erroTint"
                    app:boxStrokeErrorColor="@color/erroTint"
                    app:hintTextColor="@color/color4"
                    app:helperText="Obrigatório*"
                    app:counterEnabled="true"
                    app:counterMaxLength="50">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edTitle"
                        android:maxLength="50"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="140dp"
                    android:layout_marginEnd="32dp"
                    android:hint="Autor(a)"
                    app:startIconDrawable="@drawable/ic_person"
                    app:startIconTint="@color/color4"
                    app:counterTextColor="@color/color4"
                    app:boxStrokeColor="@color/color4"
                    app:helperTextTextColor="@color/erroTint"
                    app:boxStrokeErrorColor="@color/erroTint"
                    app:hintTextColor="@color/color4"
                    app:helperText="Obrigatório*"
                    app:counterEnabled="true"
                    app:counterMaxLength="30">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edAutor"
                        android:maxLength="30"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="215dp"
                    android:layout_marginEnd="32dp"
                    android:hint="Clique para inserir data"
                    app:startIconDrawable="@drawable/ic_date"
                    app:startIconTint="@color/color4"
                    app:counterTextColor="@color/color4"
                    app:boxStrokeColor="@color/color4"
                    app:helperTextTextColor="@color/erroTint"
                    app:boxStrokeErrorColor="@color/erroTint"
                    app:hintTextColor="@color/color4"
                    app:helperText="Obrigatório*"
                    app:counterEnabled="true"
                    app:counterMaxLength="10">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edAno"
                        android:maxLength="10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="290dp"
                    android:layout_marginEnd="32dp"
                    android:hint="Sinopse"
                    app:startIconDrawable="@drawable/ic_sinopse"
                    app:startIconTint="@color/color4"
                    app:counterTextColor="@color/color4"
                    app:boxStrokeColor="@color/color4"
                    app:helperTextTextColor="@color/erroTint"
                    app:boxStrokeErrorColor="@color/erroTint"
                    app:hintTextColor="@color/color4"
                    app:helperText="Obrigatório*"
                    app:counterEnabled="true"
                    app:counterMaxLength="500">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edSinopse"
                        android:maxLength="500"
                        android:maxLines="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </com.google.android.material.textfield.TextInputLayout>


                <android.widget.Button
                    android:id="@+id/btn_registrar"
                    android:layout_width="265dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="180dp"
                    android:background="@drawable/btentrar"
                    android:backgroundTint="@color/color4"
                    android:fontFamily="@font/montserrat"
                    android:lineSpacingMultiplier="0.38"
                    android:text="Registrar"
                    android:textColor="@color/white"
                    android:textSize="21sp" />


            </com.google.android.material.card.MaterialCardView>



        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_livro"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="150dp"
            android:layout_marginStart="125dp"
            android:src="@drawable/livro_iv" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>



